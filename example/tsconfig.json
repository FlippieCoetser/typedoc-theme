{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "typedocOptions": {
    "customCss": "./typedoc.theme.css",
    "includeVersion": true,
    "plugin": ["../"],
    "theme": "my-theme",
    "entryPoints": ["./src/index.ts"],
    "sort": ["static-first", "kind", "enum-value-ascending"],
    "out": "./docs",
    "searchGroupBoosts": {
      "Classes": 1.5
    },
    "navigationLinks": {
      "GitHub": "https://github.com/FlippieCoetser/typedoc-theme"
    }
  }
}
